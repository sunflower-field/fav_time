<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <h1>new post</h1>
        <!-- form_with部分 -->
        <%= form_with model: @post_favtime, url: publics_post_favtimes_path(@post_favtime) do |f| %>
          <h4>image</h4>
          <%= f.file_field :image, accept: "image/*" %>

          <h4>title</h4>
          <%= f.text_field :title %>

          <h4>text</h4>
          <%= f.text_area :introduction %>

          <%= f.submit '投稿' %>
        <% end %>
    </div>
  </div>
</div>