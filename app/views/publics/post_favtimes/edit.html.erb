<h1>Publics::PostFavtimes#edit</h1>
<%= form_with model: @post_favtime, url: edit_publics_post_favtime_path(@post_favtime.id) do |f| %>
      <div class="form-group">
        <label for="book_title">title</label>
        <%= f.text_field :title, class:"form-control" %>
      </div>

      <div class="form-group">
          <label for="book_opinion">text</label>
         <%= f.text_area :introduction, class:"form-control" %>
      </div>
      <div class="form-group">
         <%= f.submit 'Update favtime', class: "btn btn-success" %><br>
      </div>
      <% end %>
        <%= link_to "Show",publics_post_favtime_path(@post_favtime) %>
    		 |
  	    <%= link_to "Back",publics_post_favtimes_path %>