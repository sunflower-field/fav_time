<%#= render 'publics/post_favtimes/error', post_favtime: @post_favtime %>
<main>
  <!--↓左のサイドバー部分：時間があったら複数インスタンスを渡せるかメンターに聞いてみる-->
  <%= render 'userinfo', user: @user %>
  <h2 class="mt-3">Suggest Favetime</h2>
    <div class="card" style="width: 13rem;">
      <div class="card-header">
        <%= link_to publics_user_path(@suggest_favtime.user) do %>
          <%= image_tag @suggest_favtime.user.get_profile_image(17,17), {class: "icon"} %>
          <%= @suggest_favtime.user.name %>
      　<% end %>
　    </div>
        <% if @suggest_favtime.image.attached? %>
          <%= link_to publics_post_favtime_path(@suggest_favtime), class:"card-img-top" do %>
            <%= image_tag  @suggest_favtime.image, size: "203x203" %>
          <% end %>
        <% end %>
        <div class="card-body">
                      <%= render 'publics/post_favtimes/like', post_favtime: @suggest_favtime %>
                      &nbsp;&nbsp;&nbsp;
                      <label for="favtime_introductio"><h5><i class="fas fa-comment"></i></h5></label>
                      <h7><%= link_to publics_post_favtime_path(@suggest_favtime) do %><%= @suggest_favtime.comments.count %></h7>
                          <% end %>件
                    <div class="form-group">
                      <label for="favtime_title"><h5>Title &nbsp;: &nbsp;</h5></label>
                      <h7 class="card-title"><%= @suggest_favtime.title %></h7>
                    </div>
                    <div class="form-group">
                      <label for="favtime_introductio"><h5>Introductio&nbsp;: &nbsp;</h5></label>
                      <h7 class="card-text"><%= @suggest_favtime.introduction %></h7>
                    </div>
                  <% @suggest_favtime.post_tags.each do |post_tag| %>
                    #<%= link_to post_tag.tag_name, publics_post_favtimes_path(post_tag_id: post_tag.id) %>
                  <% end %>
        </div>
      </div>
    </div>
    <!--↑左のサイドバー部分：時間があったら複数インスタンスを渡せるかメンターに聞いてみる-->

  <div class="col-md-8 offset-md-1">
    <tbody>
                <% @post_favtimes.each do |post_favtime| %>
                <div class="card border-light mb-3" style="max-width: 31.5rem;">
                  <div class="card-header"><%= image_tag post_favtime.user.get_profile_image(35,35), {class: "icon"} %>
                      <%= link_to publics_user_path(post_favtime.user) do %>
                             <%= post_favtime.user.name %>
                          <% end %>
                  </div>
                        <% if post_favtime.image.attached? %>
                          <%= link_to publics_post_favtime_path(post_favtime), class:"card-img-top" do %>
                            <%= image_tag  post_favtime.image, size: "500x500" %>
                          <% end %>
                        <% end %>
                                <%# else %>
                                <%#= link_to post_favtime.title, book_path(book) do %>
                                <%#= image_tag 'no_image.jpag', size: "500x500" %>
                                <%# end %>
                                <%# end %>
                        <div class="card-body">
                              <%= render 'publics/post_favtimes/like', post_favtime: post_favtime %>
                              &nbsp;&nbsp;&nbsp;
                              <label for="favtime_introductio"><h5><i class="fas fa-comment"></i></h5></label>
                              <h7><%= link_to publics_post_favtime_path(post_favtime) do %><%= post_favtime.comments.count %></h7>
                                  <% end %>件
                            <div class="form-group">
                              <label for="favtime_title"><h5>Title &nbsp;: &nbsp;</h5></label>
                              <h7 class="card-title"><%= post_favtime.title %></h7>
                            </div>
                            <div class="form-group">
                              <label for="favtime_introductio"><h5>Introductio&nbsp;: &nbsp;</h5></label>
                              <h7 class="card-text"><%= post_favtime.introduction %></h7>
                            </div>
                          <% post_favtime.post_tags.each do |post_tag| %>
                            #<%= link_to post_tag.tag_name, publics_post_favtimes_path(post_tag_id: post_tag.id) %>
                          <% end %>
                        </div>
                </div>
                <% end %>
      <!--</div>-->
    </tbody>
  </div>
</main>

