<main>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <div class="content"><h2>User info</h2></div>
              <%= form_with model: @user, url: publics_user_path, local: true do |f| %>
              <div class="form-group">
                <label for="user_name">Name</label>
                <%= f.text_field :name, class:"form-control" %>
               </div>
              <div class="form-group">
                <label for="user_image">Image</label><br>
                <%= f.file_field :profile_image,  accept: "image/*" %>
              </div>
              <div class="form-group">
                <label for="user_introduction">Introduction</label>
                <%= f.text_area :introduction, class:"form-control" %>
              </div>

               <%= f.submit 'Update User', class:"btn btn-secondary" %>
            <% end %>
            </br>
            </br>
            <div class="text-right unsub">
             <%= button_to publics_unsubscribe_path, class:"btn btn-outline-danger" do %>
              退会する
             <% end %>
            </div>
    </div>
  </div>
</div>
</main>