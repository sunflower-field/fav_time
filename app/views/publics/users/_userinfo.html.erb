<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

           <%= image_tag user.get_profile_image(100,100), {class: "icon"} %>

            <table class="table">
            <tbody><tr></tr>
            <tr>
          	  <th>name</th>
          	  <th><%= user.name %></th>
            </tr>
            <tr>
          	  <th>introduction</th>
          	  <th><%= user.introduction %></th>
            </tr>
            </tbody>
         </table>
         <div class="row">
            <% unless user.email == 'guest@example.com' %>
              <% if user == current_user %>
               <%= link_to  edit_publics_user_path(user), class:"btn btn-outline-secondary btn-block" do %>
               <i class="fas fa-user-cog"></i>
               <% end %>
              <% end %>
            <% end %>
         </div>

