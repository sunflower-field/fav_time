<!DOCTYPE html>
<html>
  <head>
      <title>FavTimes</title>
      <meta name="viewport" content="width=device-width,initial-scale=1">
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
      <%#= favicon_link_tag('favicon.ico') %>
  </head>
  <body>
 <div class="footerFixed">

    <header>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#fafdff">
      <div class="container">
        <a class="navbar-brand" href="/"><span><%= image_tag "logo.png", size: "100x100" %></span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
                      aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li>
              <%= link_to  publics_user_path(current_user.id), class:"nav-link text-dark" do %>
                 <i class="fas fa-home"></i>Home
              <% end %>
            </li>
            <li>
              <%= link_to new_publics_post_favtime_path, class:"nav-link text-dark" do %>
                 <i class="fas fa-plus"></i>new post
              <% end %>
            </li>
            <li>
              <%= link_to   publics_post_favtimes_path, class:"nav-link text-dark" do %>
                 <i class="fab fa-gratipay"></i>favtaimes
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete, class:"nav-link text-dark" do %>
                 <i class="fas fa-sign-out-alt"></i>Log out
              <% end %>
            <li>
              <%= form_with(url: search_publics_post_favtimes_path, local: true, method: :get, class: "search-form")  do |f| %>
                <%= f.text_field :keyword, placeholder: "検索する", class: "search-input" %>
                <button type="submit">
                  <i class="fas fa-search"></i>
                </button>
              <% end %>
            </li>


            <% else %>
            <li>
              <%= link_to publics_homes_guest_sign_in_path, method: :post,class:"nav-link text-dark" do %>
                 <i class="far fa-user"></i>guest(閲覧用)
              <% end %>
            </li>
            <li>
              <%= link_to  root_path, class:"nav-link text-dark" do %>
                 <i class="fas fa-home"></i>Top
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path, class:"nav-link text-dark" do %>
                 <i class="fas fa-user-plus"></i>Sign up
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path, class:"nav-link text-dark" do %>
                 <i class="fas fa-sign-in-alt"></i>Log in
              <% end %>
            <% end %>
            </li>

          </ul>
        </div>
      </div>
    </nav>
    </header>
  <%= yield %>
   <footer>
          		©fav_times
   </footer>
  </div>
  </body>
</html>